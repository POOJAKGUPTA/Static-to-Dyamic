<div class="container">
<h1>Edit Profile</h1>
<hr>
<div class="row">
<!-- left column -->
<%= form_for :asheesh, url: update_user_hello_profile_path(@my_user_for_update), method: :patch do |f| %>
<div class="col-md-3">
   <div class="text-center">
      <img src="//placehold.it/100" class="avatar img-circle" alt="avatar">
      <h6>Upload a different photo...</h6>
      <%= f.file_field :image, class: "form-control" %>
   </div>
</div>
<!-- edit form column -->
<div class="col-md-9 personal-info">
<div class="alert alert-info alert-dismissable">
   <a class="panel-close close" data-dismiss="alert">Ã—</a> 
   <i class="fa fa-coffee"></i>
   <strong>This is mandatory to fill all fields</strong>
</div>
<h3>Personal info</h3>
<!-- <form class="form-horizontal" role="form"> -->
<div class="form-group">
   <label class="col-lg-3 control-label">First name:</label>
   <div class="col-lg-8">
      <!-- <input class="form-control" type="text" value="Jane"> -->
      <%= f.text_field :my_first_name, class: "form-control" %>
   </div>
</div>
<div class="form-group">
<label class="col-lg-3 control-label">Last name:</label>
<div class="col-lg-8">
   <!--  <input class="form-control" type="text" value="Bishop">
      </div> -->
   <%= f.text_field :my_last_name, class: "form-control" %>
</div>
<div class="form-group">
   <label class="col-lg-3 control-label">Phone:</label>
   <div class="col-lg-8">
      <!-- <input class="form-control" type="text" value=""> -->
      <%= f.number_field :my_phone_no, class: "form-control" %>
   </div>
</div>
<div class="form-group">
   <label class="col-lg-3 control-label">Company:</label>
   <div class="col-lg-8">
      <!--  <input class="form-control" type="text" value="janesemail@gmail.com"> -->
      <%= f.text_field :company, class: "form-control" %>
   </div>
   <div class="form-group">
      <label class="col-md-3 control-label">Permanent Address:</label>
      <div class="col-md-8">
         <!-- <input class="form-control" type="text" value="janeuser">
            </div>
                   -->         <%= f.text_field :my_permanent_address, class: "form-control" %>
      </div>
      <div class="form-group">
         <label class="col-md-3 control-label">Current Location:</label>
         <div class="col-md-8">
            <%= f.text_field :my_current_address, class: "form-control" %>
            <!-- <input class="form-control" type="password" value="11111122333"> -->
         </div>
      </div>
      <div class="form-group">
         <label class="col-md-3 control-label">About:</label>
         <div class="col-md-8">
            <%= f.text_area :my_about, class: "form-control" %>
            <!-- <input class="form-control" type="password" value="11111122333"> -->
         </div>
         <div class="form-group">
            <label class="col-md-3 control-label">Role:</label>
            <div class="col-md-8">
               <%= f.text_field :my_role, class: "form-control" %>
               <!-- <input class="form-control" type="password" value="11111122333"> -->
            </div>
         </div>
         <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
               <%= f.submit 'Save Changes', class: "btn btn-primary"%>
               <span></span>
               <input type="reset" class="btn btn-default" value="Cancel">
            </div>
         </div>
         <% end %>
         <!-- </form> -->
      </div>
   </div>
</div>
<hr>